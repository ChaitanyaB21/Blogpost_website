<%- include("header") %>

    <h1>Compose</h1>
    <form action="/Compose" method="post">
        <div class="form-group">
            <label for="inputdefault">Title</label>
            <input class="form-control" id="inputdefault" type="text" name="postTitle">
        </div>

        <div class="form-group">
            <label for="inputdefault">Post</label>
            <textarea name="postBody" rows="5" cols="30" class="form-control" aria-label="With textarea"></textarea>
        </div>

        <br>

        <button type="submit" class="btn btn-primary">Publish</button>

    </form>

    <%- include("footer") %>